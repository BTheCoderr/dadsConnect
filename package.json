{
  "name": "dadconnect-monorepo",
  "private": true,
  "workspaces": [
    "apps/web",
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "npm run -w @dadconnect/shared build && npm run -w @dadconnect/web build && npm run -w @dadconnect/mobile build",
    "build:web": "npm run -w @dadconnect/web build",
    "dev:web": "npm run -w @dadconnect/web dev",
    "dev:mobile": "npm run -w @dadconnect/mobile start",
    "typecheck": "tsc -b packages/shared",
    "install:all": "npm install"
  },
  "dependencies": {
    "typescript": "~5.3.3"
  }
}
